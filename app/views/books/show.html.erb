<% provide(:title, @book.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%=@book.ISBN%>
        <%=@book.author%>
        <%=@book.title%>
        <%=@book.description%>
        <%=@book.status%>

        <li>
          <%= link_to "delete", @book, method: :delete,
                      data: { confirm: "You sure?" } %>
        </li>

      </h1>
    </section>
  </aside>
</div>