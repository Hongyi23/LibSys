<% provide(:title, 'User') %>
<h1>Suggest a book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= f.label :ISBN %>
        <%= f.text_field :ISBN %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :author %>
        <%= f.text_field :author %>
        <%= f.label :status %>
        <%= f.text_field :status %>
        <%= f.submit "Suggest a book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>